{
  "compilerOptions": {
    "module": "CommonJS", // Node.js typically uses CommonJS
    "target": "ES2020", // ES2020 is a good choice for modern Node.js versions
    "outDir": "./dist", // Specify output directory for compiled files
    "rootDir": "./src", // Specify the root directory of the source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files (optional, can improve build speed)
    "forceConsistentCasingInFileNames": true // Ensure consistent file casing
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
